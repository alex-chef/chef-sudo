Defaults !lecture,tty_tickets,!fqdn

# User privilege specification
root ALL=(ALL) ALL

<% node[:sudo][:active_groups].each do |group_name| -%>
# Members of the group "<%= group_name %>" may gain root privileges
%<%= group_name %> ALL=(ALL) ALL
<% end -%>

<% node[:sudo][:active_users].each do |options| -%>
<%= options[:user] %> ALL=(<%= options[:target_user] || 'ALL' %>) <%= options[:command] || 'ALL' %>
<% end -%>
